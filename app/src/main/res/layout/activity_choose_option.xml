<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainaa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity_choose_option">


    <Button
        android:id="@+id/btnMyFlashcards"
        style="@style/SquareButton"
        android:layout_width="259dp"
        android:layout_height="86dp"
        android:layout_margin="16dp"


        android:onClick="onMyFlashcardsClicked"
        android:shadowColor="@color/black"
        android:text="@string/as_minhas_flashcards"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnCreateFlashcards"
        style="@style/SquareButton"
        android:layout_width="259dp"
        android:layout_height="86dp"
        android:layout_margin="16dp"
        android:onClick="onCreateFlashcardsClicked"

        android:shadowColor="@color/black"

        android:text="@string/criar_flashcards"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />





</LinearLayout>
